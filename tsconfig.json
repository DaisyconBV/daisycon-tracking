{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"lib": [
			"es2018",
			"dom"
		],
		"moduleResolution": "node",
		"paths": {
			"src/*": [
				"./src/*"
			]
		},
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types",
			"types/"
		]
	},
	"include": ["src"],
	"exclude": ["node_modules", "tests"]
}
